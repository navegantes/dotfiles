{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.labelFormat": "short",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.editor.tabSizing": "fit",

  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "editor.fontWeight": "500",
  "editor.renderLineHighlight": "gutter",
  "editor.defaultFormatter": "EditorConfig.EditorConfig", // "editor.defaultFormatter": "<another formatter>",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.fontLigatures": false,
  "editor.fontFamily": "MesloLGLDZ Nerd Font Bold, Hack Nerd Font Mono, Cascadia mono, JetBrains Mono",
  "editor.autoClosingBrackets": "always",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.cursorWidth": 4,
  "editor.cursorBlinking": "expand",
  "editor.cursorSurroundingLines": 2,
  "editor.tabSize": 2,
  "editor.rulers": [75],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    /** Pyformat use it's own code action to  */
    "source.organizeImports": true
  },
  "editor.tokenColorCustomizations": {
    "comments": "#7a7a7a"
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.largeFileOptimizations": false,

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.cursorWidth": 3,
  
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  
  "git.confirmSync": false,
  "files.exclude": {
    "__pycache__/*.pyc": true,
    "**/.pyc": true
  },
  "files.associations": {
    "*.js": "javascript",
    "html": "html",
    "**/templates/*.html": "django-html",
    "**/templates/*": "django-txt",
    "*.html": "html",
    "*.py": "python"
  },

  "powermode.enabled": true,
  // "powermode.presets": "flames",
  "powermode.presets": "particles",
  "powermode.shake.enabled": false,
  "powermode.explosions.size": 16,
  "powermode.explosions.explosionOrder": "random",
  "powermode.explosions.duration": 300,
  "powermode.explosions.enabled": true,
  "powermode.explosions.frequency": 1,
  "powermode.combo.counterSize": 1,

  "simple.readme.settings.lang": "pt-BR",
  "simple.readme.settings.github": "navegantes",
  "simple.readme.settings.name": "Raphael Navegantes",

  "material-icon-theme.activeIconPack": "nest",
  "notebook.lineNumbers": "on",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "code-runner.clearPreviousOutput": true,
  "cSpell.language": "en, pt-br",
  "material-icon-theme.opacity": 0.7,
}